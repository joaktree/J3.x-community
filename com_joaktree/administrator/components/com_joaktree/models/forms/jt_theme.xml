				type="list"
				label="COM_JOAKTREE_SHOWUPDATE_LABEL"
				description="COM_JOAKTREE_SHOWUPDATE_DESC"
				default="Y"
			>
				<option	value="N">JNO</option>
				<option value="Y">JYES</option>
			</field>
	
			<field
