				name="Directory"
				type="text"
				label="COM_JOAKTREE_DIRECTORY_LABEL"
				description="COM_JOAKTREE_DIRECTORY_DESC"
				default = "images/joaktree"
				class="inputbox"
			/>
	
			<field
				id="pxHeight"
